mixin icons(title)
    case title 
        when "profile"
            img(class='profile-icon' src="./assets/img/profile_icon.png", alt="icon")
        when "contact"
            img(class='contact-icon' src="./assets/img/contact_icon.png", alt="icon")
        when "skills"
            img(class='skills-icon' src="./assets/img/skills_icon.png", alt="icon")    
        when "education"
            img(class='education-icon' src="./assets/img/education_icon.png", alt="icon")    
        when "experience"
            img(class='experience-icon' src="./assets/img/experience_icon.png", alt="icon")        
        when "software"
            img(class='software-icon' src="./assets/img/software_icon.png", alt="icon")        